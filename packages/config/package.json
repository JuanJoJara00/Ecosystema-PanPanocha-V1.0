{
    "name": "@panpanocha/config",
    "version": "1.0.0",
    "type": "module",
    "description": "Shared configurations for PanPanocha applications",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        },
        "./theme": {
            "types": "./dist/theme.d.ts",
            "default": "./dist/theme.js"
        },
        "./tailwind": {
            "types": "./dist/tailwind.d.ts",
            "default": "./dist/tailwind.js"
        }
    },
    "scripts": {
        "build": "tsc",
        "clean": "rimraf dist",
        "typecheck": "tsc --noEmit"
    },
    "devDependencies": {
        "typescript": "^5.7.3",
        "rimraf": "^6.0.1",
        "tailwindcss": "^4.0.0"
    },
    "files": [
        "dist",
        "src"
    ]
}