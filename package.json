{
  "name": "panpanocha-workspace",
  "version": "1.0.0",
  "private": true,
  "description": "PanPanocha monorepo - Portal & POS applications",
  "author": "Pan Panocha Tech",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.1",
  "scripts": {
    "dev": "pnpm --parallel --filter './apps/*' dev",
    "dev:portal": "pnpm --filter @panpanocha/portal dev",
    "dev:pos": "pnpm --filter @panpanocha/pos dev",
    "build": "pnpm --filter './packages/*' build && pnpm --filter './apps/*' build",
    "build:portal": "pnpm --filter @panpanocha/portal build",
    "build:pos": "pnpm --filter @panpanocha/pos build",
    "lint": "pnpm --parallel --filter './apps/*' lint",
    "clean": "pnpm --parallel --filter './apps/*' --filter './packages/*' clean",
    "typecheck": "pnpm --parallel --filter './apps/*' --filter './packages/*' typecheck"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@powersync/web": "^1.30.0",
    "@supabase/supabase-js": "^2.89.0"
  }
}